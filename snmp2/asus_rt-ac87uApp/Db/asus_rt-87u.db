#CPU Statistics

# #Load Averages
record(snmpstr, "${ASUS}:Load_1m") {
  field(DESC, "1 minute Load")
  field(DTYP, "SNMP Read")
  field(SCAN, "5 second")
  field(VERS, "${V2C}")
  field(HOST, "${HOST}")
  field(COMM, "${COM}")
  field(OIDS, "${UCD}laLoad.1")
}

