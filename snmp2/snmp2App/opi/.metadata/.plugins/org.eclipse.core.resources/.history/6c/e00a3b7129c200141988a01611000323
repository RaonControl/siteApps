importPackage(Packages.org.csstudio.opibuilder.scriptUtil);

var status = PVUtil.getString(pvs[0]);


if(status = "80 mainOn(0)") {
widget.setPropertyValue("text", "ON");
widget.setPropertyValue("on_state",true);
widget.setPropertyValue("on_color",ColorFontUtil.getColorFromRGB(255,255,0));

} else if (status = "80 mainInhibit(1)") {
widget.setPropertyValue("text", "Inhibit");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));

} else if (status = "80 localControlOnly(2)") {
widget.setPropertyValue("text", "Local control Only");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 inputFailure(3)") {
widget.setPropertyValue("text", "Power fail");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 outputFailure(4)") {
widget.setPropertyValue("text", "Output failure");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 fantrayFailure(5)") {
widget.setPropertyValue("text", "Fantray failure");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 sensorFailure(6)") {
widget.setPropertyValue("text", "Temp sensor failure");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 vmeSysfail(7)") {
widget.setPropertyValue("text", "VME SYSFAIL");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "plugAndPlayIncompatible(8)") {
widget.setPropertyValue("text", "Wrong p/s and rack connected");


} else if (status = "80 busReset(9)") {
widget.setPropertyValue("text", "BUS Reset");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 supplyDerating(10)") {
widget.setPropertyValue("text", "1st P/S DEG");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 supplyFailure(11)") {
widget.setPropertyValue("text", "1st P/S FAL");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));


} else if (status = "80 supplyDerating2(12)") {
widget.setPropertyValue("text", "2nd P/S DEG");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));

} else if (status = "80 supplyFailure2(13)") {
widget.setPropertyValue("text", "2nd P/S FAL");
widget.setPropertyValue("font",ColorFontUtil.getFont("Cantarell",9,1));

} else {
widget.setPropertyValue("text", "OFF");
}