importPackage(Packages.org.csstudio.opibuilder.scriptUtil);

var status = PVUtil.getString(pvs[0]);

if(status = "80 mainOn(0)") {
widget.setPropertyValue("text", "OK");

} else if (status = "80 mainInhibit(1)") {
widget.setPropertyValue("text", "Inhibit of the system");

} else if (status = "80 localControlOnly(2)") {
widget.setPropertyValue("text", "Local control only");

} else if (status == "80 inputFailure(3)") {
widget.setPropertyValue("text", "Power FAIL");

} else if (status == "80 outputFailure(4)") {
widget.setPropertyValue("text", "Output FAIL");

} else if (status == "80 fantrayFailure(5)") {
widget.setPropertyValue("text", "Fan FAIL");

} else if (status == "80 sensorFailure(6)") {
widget.setPropertyValue("text", "Over Heat");

} else if (status == "80 vmeSysfail(7)") {
widget.setPropertyValue("text", "SYS FAIL");

} else if (status == "plugAndPlayIncompatible(8)") {
widget.setPropertyValue("text", "Wrong connected");

} else if (status == "80 busReset(9)") {
widget.setPropertyValue("text", "Reset");

} else if (status == "80 supplyDerating(10)") {
widget.setPropertyValue("text", "P/S1 DEG");

} else if (status == "80 supplyFailure(11)") {
widget.setPropertyValue("text", "P/S1 FAL ");

} else if (status == "80 supplyDerating2(12)") {
widget.setPropertyValue("text", "P/S2 DEG");

} else if (status == "80 supplyFailure2(13)") {
widget.setPropertyValue("text", "P/S2 FAL");

} else {
widget.setPropertyValue("text", "OFF");

}
